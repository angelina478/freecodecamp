# string concatenation (aka how to put strings togeher)
# suppse we want to create a string that says "subscribe to ____"
youtuber = "Kalie Ying" # some string variable

# a few ways to do this
print("subscribe to " + youtuber)
print("subscribe to {}".formate(youtuber))
print(f"subscribe to (youtuber)")

adj = input ("Adjective: Amazing")
verb1 = input ("verb: skydive")
verb2 = input ("verb: jump")
famous_person = input ("Famous person: Captain America")


madlib = f"Computer programming is so {adj}! It makes me so excited all the time because \
    I love to {verb1}. Stay hydrated and {verb2} like you are {famous_person}!"
